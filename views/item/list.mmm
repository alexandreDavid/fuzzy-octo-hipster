{{#movies}}
	<div class="movie email-item pure-g" data-item-id='{{_id}}'>
		<div class="pure-u">
			<img class="email-avatar" alt="" src="{{thumbnail}}" width="64"/>
		</div>

		<div class="pure-u-3-4">
			<h5 class="email-name">{{title}}</h5>
			<h4 class="email-subject"><a>{{directors}}</a> <span>{{year}}</span></h4>
			<p class="email-desc">
				{{actors}}
			</p>
		</div>
	</div>
{{/movies}}
